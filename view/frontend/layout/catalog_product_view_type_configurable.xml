<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceBlock name="product.info">
      <action ifconfig="mage4/general/show_swatches" method="setTemplate">
          <argument name="template" xsi:type="string">Mage4_ShowPriceOSP::product/view/form.phtml</argument>
      </action>
    </referenceBlock>
    <referenceBlock name="product.info.addtocart">
      <action ifconfig="mage4/general/show_add_to_cart" method='setTemplate'>
          <argument name="template" xsi:type="string">Mage4_ShowPriceOSP::product/view/addtocart.phtml</argument>
      </action>
    </referenceBlock>
  </body>
</page>
